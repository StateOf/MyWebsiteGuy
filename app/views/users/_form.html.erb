<%= form_for @user, html: {class: "form-horizontal"} do |f| %>

  <% if @user.errors.any? %>
  <div class="form-group">
    <div class="col-md-7 col-md-offset-2">
      <div class="alert alert-danger">
        <h3><%= pluralize(@user.errors.count, "error") %> prohibited this form from being saved: </h3>
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  </div>
  <% end %>

  <div class="form-group">
    <%= f.label :first_name, class:"col-md-2 control-label" %>
    <div class="col-md-6">
      <%= f.text_field :first_name, class:"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :last_name, class: "col-md-2 control-label" %>
    <div class="col-md-6">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class: "col-md-2 control-label" %>
    <div class="col-md-6">
      <%= f.email_field :email, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-10 col-md-offset-2">
      <%= f.submit name_of_button, class: "btn btn-primary" %>
      <%= link_to 'Cancel', users_path(@users), class:"btn btn-default" %>
    </div>
  </div>

<% end %>
