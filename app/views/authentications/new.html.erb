<div class="well col-md-8 col-md-offset-2">
    <div class="page-header">
      <h2>Sign into gCamp!</h2>
    </div>


    <%= form_tag signin_path do |f| %>

      <% if flash[:warning] %>
        <h5 class="alert alert-danger text-center"><%= flash[:error] %></h5>
      <% end %>

    <div class="form-group">
      <%= label_tag :email, class:"control-label" %>
      <%= email_field_tag :email, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :password, class:"control-label" %>
      <%= password_field_tag :password, class:"form-control" %>
    </div>

    <div class="form-group">
      <%= submit "Sign Up", class: "btn btn-default" %>
    </div class="form-group">
    <% end %>
    </div>
