<div class= "page-header">
  <div class="pull-right">
    <%= link_to 'Edit', edit_project_path(@project), class:"btn btn-info" %>
    <%= link_to 'Delete', project_path, method: :delete, data: {confirm: "are you sure?"}, class:"btn btn-danger" %>
  </div>
  <h1>
    <%= @project.name %>
  </h1>
</div>

<ol class="breadcrumb">
  <li><%= link_to 'Projects', projects_path(@project) %></li>
  <li class="active"><%= @project.name %></li>
</ol>

<div>
  <p><%= link_to pluralize(@project.tasks.count, "Task"), project_tasks_path(@project) %></p>
</div>
<div>
  <p><%= link_to pluralize(@project.memberships.count, "Membership"), project_memberships_path(@project) %></p>
</div>

<div class="well">
  <h3>Delete Project</h3>
  <p>Deleting this project will also delete <%= pluralize(@project.memberships.count, "membership") %> and <%= pluralize(@project.tasks.count, "task") %> and associated comments.</p>
  <%= link_to "Delete", @projects_path, method: :delete, data: {cofirm: "Are you sure?"}, class:"btn btn-danger" %>
</div>
