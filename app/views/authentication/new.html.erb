<div class="well col-md-8 col-md-offset-2">
    <div class="page-header">
      <h2>Sign into gCamp!</h2>
    </div>

    <%= form_tag signin_path do |f| %>

    <% if flash[:warning] %>
    <div class="text-danger"><%= flash[:warning] %></div>
    <% end %>

    <div class="form-group">
      <%= label_tag :email, "Email", class:"control-label" %>
      <%= email_field_tag :email, "", class:"form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :password, "Password", class:"control-label" %>
      <%= password_field_tag :password, "", class:"form-control" %>
    </div>
    <div class="form-group">
      <%= submit_tag "Sign Up", class: "btn btn-default" %>
    </div>
    <% end %>

</div>
