<div class="page-header">
  <h1>New Task</h1>
</div>

<%= form_for @task do |f| %>
<div class="form-group">
<%= f.label :description  %>
</div>
<div class="form-group">
<%= f.text_field :description %>
</div>
<div class="form-group">
<%= f.submit "Create Task" %>
</div>
<% end %>
<%= link_to "Back", tasks_path(@tasks) %>
