<div class="page-header">
  <div class="pull-right">
    <%= link_to 'New Task', new_task_path(@task), class:"btn btn-info" %>
  </div>
  <h1>Tasks</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th class="col-md-2">Description</th>
      <th>Due Date</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td>
        <% if task.complete == true %>

        <s><%= link_to task.description, task_path(task) %></s>

        <% else %>
        <%= link_to task.description, task_path(task) %>
        <% end %>

      </td>
      <td>
        <%= task.due_date.strftime("%m/%d/%Y") %>
      </td>
      <td class="text-right">

        <%= link_to 'Edit', edit_task_path(task), class: "btn btn-info" %>
        <%= link_to 'Delete', task_path(task), method: :delete, data: {confirm: "Are you sure?"}, class:"btn btn-danger" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
