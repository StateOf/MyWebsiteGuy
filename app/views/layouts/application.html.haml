!!!
%html
  %head
    %title gCamp
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body
    %nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        %div
          - if current_user
            = link_to 'gCamp', projects_path, class: "navbar-brand"
          - else
            = link_to 'gCamp', "/", class:"navbar-brand"
        %ul.nav.navbar-nav.navbar-right
          - if current_user
            = link_to "Sign Out", signout_path, class: "navbar-text pull-right"
            = link_to current_user.full_name, user_path(current_user), class: "navbar-text pull-right"
          - else
            = link_to "Sign In", sign_in_path, class: "navbar-text pull-right"
            = link_to "Sign Up", sign_up_path, class: "navbar-text pull-right"

    .container
      - if flash[:error]
        .alert.alert-danger.text-left= flash[:error]

      - if flash[:message]
        .alert.alert-success.text-left= flash[:message]

      = yield

    %footer.container
      .page-header
      .row
        .col-xs-6
          = link_to "About", "/about"
          |
          = link_to "Terms", "/terms"
          |
          = link_to "FAQ", "/faq"
          - if current_user
            |
            = link_to "Users", "/users"
            |
            = link_to "Projects", "/projects"
        .col-xs-6
          = link_to image_tag("galvanize.png", alt: "Galvanize", class: "links"), "https://coursework.galvanize.com/people/291"
          = link_to image_tag("github.png", alt: "GitHub", class: "links"), "https://github.com/steve970"
          = link_to image_tag("linked_in.jpg", alt: "LinkedIn", class: "links"), "http://www.linkedin.com/in/stevenhirschhorn"
